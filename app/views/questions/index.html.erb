<h1><%= t('questions.community_questions')%></h1>

<% if user_signed_in? %>
  <%= link_to t('questions.ask_question'), new_question_path %>
<% end %>

<% @questions.each do |question| %>
  <div id="<%= dom_id(question) %>">
    <%= link_to question.title, '#' %>

    <% if user_signed_in? && question.user == current_user %>
      <hr>
      <%= link_to t('edit'), edit_question_path(question) %>
      <%= link_to t('destroy'), question_path(question), data: { 'turbo-method': :delete, 'turbo-confirm': 'Are you sure?' } %>
    <% end %>
  </div>
<% end %>
